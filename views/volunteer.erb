<h1>Update the <%=@volunteer.volunteer_name() %> name </h1>

<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your volunteer:</label>
  <input id="name" name="volunteer_name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete this volunteer</button>
</form>

<a href="/" class="btn btn-success">Home</a>
